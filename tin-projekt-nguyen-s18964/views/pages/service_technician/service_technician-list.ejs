<%- include('../../fragments/header.ejs') %>

<main>
    <h2>List serwisantów</h2>
    <table class="table-list">
        <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Specjalizacja</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        <% for (let st of myServiceTechnicians) { %>
            <tr>
                <td><%= st.firstName %></td>
                <td><%= st.lastName %></td>
                <td><%= st.specialization %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="servicetechnicians/details/<%=st._id%>" class="list-actions-button-details">Szczegóły</a></li>
                        <li><a href="servicetechnicians/edit/<%=st._id%>" class="list-actions-button-edit">Edytuj</a></li>
                        <li><a href="servicetechnicians/delete/<%=st._id%>" class="list-actions-button-delete">Usuń</a></li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>

    <p><a href="servicetechnicians/add" class="button-add">Dodaj nowego serwisanta</a></p>

</main>

<%- include('../../fragments/footer.ejs') %>